{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
  "metadata": [
    {
      "src": [
        {
          "src": "../src/",
          "files": "**/*.csproj",
          "exclude": "**/*.Tests.csproj"
        }
      ],
      "output": "../artifacts/docs/api/",
      "enumSortOrder": "declaringOrder",
      "memberLayout": "separatePages",
      "filter": "filter.yml"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "*.md",
          "toc.yml",
          "{articles,tutorials,examples}/**/*.md",
          "{articles,tutorials,examples}/**/toc.yml"
        ],
        "exclude": "README.md"
      },
      {
        "src": "../artifacts/docs/api/",
        "dest": "api",
        "files": "**/*.yml"
      }
    ],
    "resource": [
      {
        "files": [
          "images/**",
          "{articles,tutorials,examples}/**/*.{bonsai,svg}"
        ]
      },
      {
        "src": "../build/",
        "files": "icon.png"
      }
    ],
    "overwrite": [
      "apidoc/**/*.md"
    ],
    "output": "../artifacts/docs/site/",
    "template": [
      "default",
      "modern",
      "harp-docfx/template",
      "template"
    ],
    "sitemap": {
      "baseUrl": "https://harp-tech.org/generators"
    },
    "globalMetadata": {
      "_appName": "Harp.Generators",
      "_appTitle": "Harp.Generators",
      "_appFooter": "&copy; harp-tech and Contributors. Made with <a href=\"https://dotnet.github.io/docfx\">docfx</a>",
      "_enableNewTab": true,
      "_enableSearch": true,
      "_gitContribute": {
        "apiSpecFolder": "docs/apidoc"
      }
    },
    "markdownEngineProperties": {
      "markdigExtensions": [
        "attributes",
        "customcontainers"
      ]
    }
  }
}